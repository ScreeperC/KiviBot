{
    "compilerOptions": {
        "module": "esnext",
        "lib": [
            "esnext"
        ],
        "target": "es2020",
        "moduleResolution": "Node",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
